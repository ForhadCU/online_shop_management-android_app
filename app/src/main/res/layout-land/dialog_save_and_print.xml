<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="10dp"
                android:text="Set Default Printer"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/v2"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_below="@+id/tv1"
                android:background="#C8C7C7" />

            <RelativeLayout
                android:id="@+id/rl_loadingMiniInvoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v2"
                android:padding="16dp"
                android:visibility="visible"
                android:layout_marginTop="15dp">
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/progress_skuRequest"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_printerDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v2"
                android:visibility="gone"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Printer Name"
                    android:textAppearance="@style/TextAppearance.AppCompat" />

                <EditText
                    android:id="@+id/edtTxt_printerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv2"
                    android:layout_margin="5dp"
                    android:background="@drawable/discount_edttext_shape"
                    android:hint="Enter printer name"
                    android:padding="5dp" />

                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edtTxt_printerName"
                    android:layout_marginTop="15dp"
                    android:background="#F4F4F4"
                    android:orientation="vertical"
                    android:paddingLeft="3dp"
                    android:paddingTop="5dp">

                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Printer Size: "
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="@color/black" />

                    <RadioGroup
                        android:id="@+id/rdG_printerSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/radioBtn_printerSize50mm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50mm Thermal POS Printer"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:textColor="@color/black"
                            />

                        <RadioButton
                            android:id="@+id/radioBtn_printerSize80mm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="80mm Thermal POS Printer"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:textColor="@color/black"
                            />
                    </RadioGroup>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll1"
                    android:layout_marginTop="15dp"
                    android:text="Printer Url"
                    android:textAppearance="@style/TextAppearance.AppCompat" />

                <EditText
                    android:id="@+id/edtTxt_printerUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv4"
                    android:layout_margin="5dp"
                    android:background="@drawable/discount_edttext_shape"
                    android:hint="Enter printer url"
                    android:padding="5dp" />

                <Button
                    android:id="@+id/btn_saveAndPrint"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@id/edtTxt_printerUrl"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="#2BCA31"
                    android:text="Save &amp; Print"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_cancelSaveAndPrint"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/edtTxt_printerUrl"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="#F44336"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />
            </RelativeLayout>
        </RelativeLayout>
</androidx.cardview.widget.CardView>