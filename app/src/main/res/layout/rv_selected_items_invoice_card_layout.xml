<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <LinearLayout
        android:id="@+id/l5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#9A9A9A"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_rvSelectedItemSerial"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0.2dp"
            android:layout_weight="0.5"
            android:background="#ffff"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingRight="2dp"
            android:paddingBottom="2dp"
            android:text="1"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0.2dp"
            android:layout_weight="2"
            android:background="#ffff"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingRight="2dp"
            android:paddingBottom="5dp"
            >

            <TextView
                android:id="@+id/tv_rvSelectedItemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="#ffff"
                android:gravity="center_vertical"
                android:text="Mojar Spray 50g"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_rvSelectedItemQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_rvSelectedItemName"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="2dp"
                android:background="#ffff"
                android:text="3"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_rvSelectedItemName"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/tv_rvSelectedItemQty"
                android:background="#ffff"
                android:text="X"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_rvSelectedItemPriceForCal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_rvSelectedItemName"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/tv2"
                android:background="#ffff"
                android:text="300"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@color/black"
                android:textSize="12sp" />


        </RelativeLayout>


        <TextView
            android:id="@+id/tv_rvSelectedItemRate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0.2dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="#ffff"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingRight="2dp"
            android:paddingBottom="2dp"
            android:text="300.00"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/black"
            android:textSize="12sp"

            />

        <!--                <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_weight="0.7"
                            android:gravity="center_horizontal|center_vertical"
                            android:padding="2dp"
                            android:text="Qty"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:textColor="@color/black"
                            android:background="#ffff"
                            android:layout_margin="0.2dp"
                            android:textStyle="bold"

                            />-->

        <TextView
            android:id="@+id/tv_rvSelectedItemTotalPrice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0.2dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="1.5"
            android:background="#ffff"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingRight="2dp"
            android:paddingBottom="2dp"
            android:text="900.00"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>