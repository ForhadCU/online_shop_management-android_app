                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l6"
                android:layout_marginLeft="0dp"
                android:background="#9A9A9A"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0.2dp"
                    android:layout_marginTop="0.2dp"
                    android:layout_marginRight="0.2dp"
                    android:layout_marginBottom="0.2dp"
                    android:layout_weight="0.5"
                    android:background="#ffff"
                    android:paddingLeft="5dp"
                    android:paddingTop="2dp"
                    android:paddingRight="2dp"
                    android:paddingBottom="2dp"
                    android:text="No"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0.2dp"
                    android:layout_marginTop="0.2dp"
                    android:layout_marginRight="0.2dp"
                    android:layout_marginBottom="0.2dp"
                    android:layout_weight="2"
                    android:background="#ffff"
                    android:paddingLeft="5dp"
                    android:paddingTop="2dp"
                    android:paddingRight="2dp"
                    android:paddingBottom="2dp"
                    android:text="Item"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0.2dp"
                    android:layout_marginTop="0.2dp"
                    android:layout_marginRight="0.2dp"
                    android:layout_marginBottom="0.2dp"
                    android:layout_weight="1"
                    android:background="#ffff"
                    android:gravity="end"
                    android:paddingTop="2dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="2dp"
                    android:text="Rate"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <!--                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="1dp"
                                    android:layout_weight="0.7"
                                    android:gravity="center_horizontal|center_vertical"
                                    android:padding="2dp"
                                    android:text="Qty"
                                    android:textAppearance="@style/TextAppearance.AppCompat"
                                    android:textColor="@color/black"
                                    android:background="#ffff"
                                    android:layout_margin="0.2dp"
                                    android:textStyle="bold"

                                    />-->

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0.2dp"
                    android:layout_marginTop="0.2dp"
                    android:layout_marginRight="0.2dp"
                    android:layout_marginBottom="0.2dp"
                    android:layout_weight="1.5"
                    android:background="#ffff"
                    android:gravity="end"
                    android:paddingLeft="5dp"
                    android:paddingTop="2dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="2dp"
                    android:text="Total Tk"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:id="@+id/v2"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_below="@+id/l5"
                android:layout_marginLeft="0dp"
                android:background="#C8C7C7" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_selectedProductListInvoiceCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v2"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rv_selectedProductListInvoiceCard"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#9A9A9A"
                    android:orientation="horizontal"

                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="0.2dp"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="3.52"
                        android:background="@color/table_color"
                        android:gravity="center_vertical|end"
                        android:paddingLeft="5dp"
                        android:paddingTop="3dp"
                        android:paddingRight="25dp"
                        android:paddingBottom="3dp"
                        android:text="Sub Total"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_totalInvoiceCard"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="0.2dp"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1.5"
                        android:background="@color/table_color"
                        android:gravity="center_vertical|end"
                        android:paddingLeft="5dp"
                        android:paddingTop="3dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="3dp"
                        android:text="900.00"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#9A9A9A"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="0.2dp"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="3.52"
                        android:background="@color/table_color"
                        android:gravity="center_vertical|end"
                        android:paddingLeft="5dp"
                        android:paddingTop="3dp"
                        android:paddingRight="25dp"
                        android:paddingBottom="3dp"
                        android:text="(-) Invoice Discount"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_discountInvoiceCard"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="0.2dp"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1.5"
                        android:background="@color/table_color"
                        android:gravity="center_vertical|end"
                        android:paddingLeft="5dp"
                        android:paddingTop="3dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="3dp"
                        android:text="49.50"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#9A9A9A"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="0.2dp"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="3.52"
                        android:background="@color/table_color"
                        android:gravity="center_vertical|end"
                        android:paddingLeft="5dp"
                        android:paddingTop="3dp"
                        android:paddingRight="25dp"
                        android:paddingBottom="3dp"
                        android:text="(-) Invoice Deduction"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_deductionInvoiceCard"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="0.2dp"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1.5"
                        android:background="@color/table_color"
                        android:gravity="center_vertical|end"
                        android:paddingLeft="5dp"
                        android:paddingTop="3dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="3dp"
                        android:text="0.50"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#9A9A9A"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="0.2dp"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="3.52"
                        android:background="@color/table_color"
                        android:gravity="center_vertical|end"
                        android:paddingLeft="5dp"
                        android:paddingTop="3dp"
                        android:paddingRight="25dp"
                        android:paddingBottom="3dp"
                        android:text="Grand Total"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_grandTotalInvoiceCard"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="0.2dp"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1.5"
                        android:background="@color/table_color"
                        android:gravity="center_vertical|end"
                        android:paddingLeft="5dp"
                        android:paddingTop="3dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="3dp"
                        android:text="850.00"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l3"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EDEDED"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="Due date : "
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_dueDateInvoiceCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv6"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv6"
                    android:text="29 Jan 2021"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="@color/black" />

                <!--                <TextView
                                    android:id="@+id/tv7"
                                    android:layout_width="wrap_content"
