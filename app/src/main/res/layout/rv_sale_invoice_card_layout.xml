<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="10dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightgray"
            android:padding="10dp">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/imgV_customerImgInvoiceCard"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitCenter"
                android:src="@drawable/person_img"
                app:civ_border_color="#00C853"
                app:civ_border_width="2dp"
                app:civ_shadow="true"
                app:civ_shadow_color="#737373"
                app:civ_shadow_radius="3dp" />

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/statusBg"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignBottom="@+id/imgV_customerImgInvoiceCard"
                android:layout_marginLeft="-28dp"
                android:layout_marginBottom="8dp"
                android:layout_toRightOf="@+id/imgV_customerImgInvoiceCard"
                android:src="@mipmap/ic_launcher"
                app:civ_border_color="#FFFFFF"
                app:civ_border_width="10dp"

                />

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/imgV_activeIcon"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignBottom="@+id/imgV_customerImgInvoiceCard"
                android:layout_marginLeft="-27dp"
                android:layout_marginBottom="9dp"
                android:layout_toRightOf="@+id/imgV_customerImgInvoiceCard"
                android:src="@mipmap/ic_launcher"
                app:civ_border_color="@color/green"
                app:civ_border_width="8dp" />

            <TextView
                android:id="@+id/tv_customerNameInvoiceCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/imgV_customerImgInvoiceCard"
                android:text="Forhad Kashem Tipu"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/l12"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_customerNameInvoiceCard"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/imgV_customerImgInvoiceCard"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/tv4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.8"
                        android:text="Sale Date"
                        android:textAppearance="@style/TextAppearance.AppCompat" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center_horizontal|center_vertical"
                        android:text=":"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat" />
                    <TextView
                        android:id="@+id/tv_dateInvoiceCard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:gravity="center_vertical"
                        android:paddingStart="10dp"
                        android:paddingLeft="10dp"
                        android:text="21/12/2021"
                        android:textAppearance="@style/TextAppearance.AppCompat" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.8"
                        android:text="Invoice no"
                        android:textAppearance="@style/TextAppearance.AppCompat" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center_horizontal|center_vertical"
                        android:text=":"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat" />

                    <TextView
                        android:id="@+id/tv_invoiceNo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:paddingLeft="10dp"
                        android:text="21"
                        android:textAppearance="@style/TextAppearance.AppCompat" />

                </LinearLayout>
            </LinearLayout>

            <!--
                        <TextView
                            android:id="@+id/tv8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv4"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="4dp"
                            android:layout_toRightOf="@+id/imgV_customerImgInvoiceCard"
                            android:text="Paid : "
                            android:textAppearance="@style/TextAppearance.AppCompat" />
            -->


            <LinearLayout
                android:id="@+id/l2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_customerNameInvoiceCard"
                android:layout_alignParentRight="true"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_paidText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paid"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_dueText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Due"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_paidOrDueInvoiceCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="100000000000.0"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </RelativeLayout>

        <View
            android:id="@+id/v1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/l1"
            android:background="#CCCBCB" />

        <RelativeLayout
